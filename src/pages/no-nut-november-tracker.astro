    (nnnStartDate.getTime() - currentDate.getTime()) / (1000 * 60 * 60 * 24)
  );
  countdownText = `NNN starts in ${daysUntilNNN} days`;
  daysRemaining = daysUntilNNN;
} else if (currentDate >= nnnStartDate && currentDate <= nnnEndDate) {
  currentDay = currentDate.getDate();
  daysRemaining = 30 - currentDay;
  countdownText = `Day ${currentDay} of 30`;
} else {
  countdownText = `NNN ${currentYear} complete`;
}

