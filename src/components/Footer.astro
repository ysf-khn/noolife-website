---
// Footer Component
// Logo, links, social media, copyright
import { Image } from "astro:assets";
import noolifeLogo from "../assets/noolife_logo.png";
---

<footer
  class="py-16 md:py-20 px-4 border-t"
  style="background-color: var(--color-rich-earth); border-color: rgba(241, 237, 233, 0.08);"
>
  <div class="max-w-6xl mx-auto flex flex-col items-center gap-8">
    <!-- Logo Section -->
    <div class="flex items-center gap-3">
      <Image
        src={noolifeLogo}
        alt="NooLife Logo"
        class="w-10 h-10 rounded-lg"
        loading="lazy"
      />
      <span class="text-2xl font-extrabold">NooLife</span>
    </div>

    <!-- Links Section -->
    <nav
      class="flex flex-col md:flex-row gap-4 md:gap-8 text-center md:text-left"
    >
      <a
        href="/blog"
        class="text-[0.9375rem] font-medium transition-colors hover:text-[var(--color-jade)]"
        style="color: var(--color-faded-khaki);">Blog</a
      >
      <a
        href="/privacy"
        class="text-[0.9375rem] font-medium transition-colors hover:text-[var(--color-jade)]"
        style="color: var(--color-faded-khaki);">Privacy Policy</a
      >
      <a
        href="/terms"
        class="text-[0.9375rem] font-medium transition-colors hover:text-[var(--color-jade)]"
        style="color: var(--color-faded-khaki);">Terms of Service</a
      >
      <a
        href="mailto:support@noolife.app"
        class="text-[0.9375rem] font-medium transition-colors hover:text-[var(--color-jade)]"
        style="color: var(--color-faded-khaki);">Contact</a
      >
    </nav>

