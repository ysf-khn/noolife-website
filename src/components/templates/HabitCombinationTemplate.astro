---
// HabitCombinationTemplate.astro - Template for habit combination pages
// Pattern from seo-guy analysis and pseo-strategy.md
import { Image } from "astro:assets";
import downloadIOS from "../../assets/download-ios.svg";

interface Props {
  combination: {
    combinationName: string;
    combinationSlug: string;
    habit1Slug: string;
    habit2Slug: string;
    habit1Name: string;
    habit2Name: string;
    primaryKeyword: string;
    secondaryKeywords: string[];
    searchVolume: number;
    competitionLevel: 'low' | 'medium' | 'high';
    tier: 'tier1' | 'tier2' | 'tier3' | 'tier4';
    shortDescription: string;
    synergyScience: {
      headline: string;
      explanation: string;
      researchCitations: Array<{
        study: string;
        finding: string;
        link?: string;
      }>;
      neuroscience?: string;
    };
    stackingProtocol: {
      timing: string;
      order: string;
      bestPractice: string;
    };
    combinedBenefits: Array<{
      benefit: string;
      explanation: string;
      uniqueToCombination: boolean;
    }>;
    progressionPlan: {
      overview: string;
      weeklyBreakdown: Array<{
        weekRange: string;
        habit1Focus: string;
        habit2Focus: string;
        combinedGoal: string;
      }>;
    };
    commonMistakes: string[];
    nooLifeIntegration: string;
    relatedCombinations: string[];
    relatedChallenges: string[];
    ctaAngle: string;
    testimonial?: string;
    heroImage: string;
    tags: string[];
    metaKeywords: string[];
    faqs: Array<{
      question: string;
      answer: string;
    }>;
  };
}

const { combination } = Astro.props;
---

<!-- HERO SECTION - CTA #1 (Above Fold) -->
<section
  id="combination-hero"
  class="relative min-h-screen flex items-center justify-center px-4 py-16 sm:py-24 md:py-32"
>
  <div class="relative max-w-7xl w-full mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12 items-center">
      <!-- LEFT COLUMN: Copy -->
      <div class="lg:col-span-2 text-center lg:text-left flex flex-col justify-center">
        <!-- Badge -->
        <div class="flex flex-wrap gap-2 justify-center lg:justify-start mb-4 hero-fade-in" style="animation-delay: 0.05s;">
          <span class="px-3 py-1 text-xs font-bold rounded-full uppercase" style="background: rgba(0, 208, 156, 0.1); color: var(--color-jade); border: 1px solid rgba(0, 208, 156, 0.3);">
            {combination.tier.replace('tier', 'Tier ')}
          </span>
          <span class="px-3 py-1 text-xs font-bold rounded-full uppercase" style="background: rgba(241, 237, 233, 0.05); color: var(--color-faded-khaki); border: 1px solid rgba(241, 237, 233, 0.1);">
            Habit Stack
          </span>
        </div>

        <!-- Main Headline -->
        <h1
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold leading-[1.1] tracking-tight mb-6 hero-fade-in"
          style="animation-delay: 0.1s; color: var(--color-alabaster);"
        >
          <span style="color: var(--color-jade);">{combination.habit1Name}</span><br>
          <span style="color: var(--color-faded-khaki);">+</span><br>
          <span style="color: var(--color-jade);">{combination.habit2Name}</span>
        </h1>

        <!-- Synergy Tagline -->
        <p
          class="text-xl md:text-xl lg:text-2xl leading-snug sm:leading-relaxed max-w-2xl mx-auto lg:mx-0 mb-8 hero-fade-in"
          style="animation-delay: 0.2s; color: var(--color-faded-khaki);"
        >
          {combination.shortDescription}
        </p>

        <!-- Stats Row -->
        <div class="flex flex-wrap gap-4 justify-center lg:justify-start mb-8 hero-fade-in" style="animation-delay: 0.25s;">
          <div class="text-center">
            <div class="text-3xl font-bold" style="color: var(--color-jade);">1+1=3</div>
            <div class="text-sm" style="color: var(--color-faded-khaki);">Synergy effect</div>
          </div>
          <div class="w-px" style="background: rgba(241, 237, 233, 0.1);"></div>
          <div class="text-center">
            <div class="text-3xl font-bold" style="color: var(--color-jade);">66</div>
            <div class="text-sm" style="color: var(--color-faded-khaki);">Days to automate</div>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="flex flex-col items-center lg:items-start gap-2 hero-fade-in" style="animation-delay: 0.3s;">
          <a
            href="https://apps.apple.com/us/app/noolife-10-week-habit-plan/id6754310402"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transition-all duration-300 hover:scale-110 hover:brightness-110 active:scale-95"
            aria-label="Download on the App Store"
          >
            <Image
              src={downloadIOS}
              alt="Download on the App Store"
              class="h-16 md:h-20 w-auto"
              loading="eager"
            />
          </a>
          <p class="text-sm font-medium italic" style="color: var(--color-mint);">
            {combination.ctaAngle}
          </p>
        </div>
      </div>

      <!-- RIGHT COLUMN: Hero Image -->
      <div class="lg:col-span-3 hero-fade-in" style="animation-delay: 0.3s;">
        <div class="relative">
          <img
            src={combination.heroImage}
            alt={`${combination.habit1Name} and ${combination.habit2Name} habit stacking`}
            class="w-full h-auto block rounded-2xl transition-all duration-700 hover:scale-[1.02]"
            style="filter: drop-shadow(0 25px 80px rgba(0, 208, 156, 0.2));"
            loading="eager"
          />
          <div class="absolute -inset-4 bg-linear-to-r from-jade to-mint opacity-20 blur-3xl -z-10 rounded-3xl"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- SYNERGY SCIENCE SECTION -->
<section class="py-16 md:py-24 px-4" style="background: linear-gradient(180deg, var(--color-rich-earth) 0%, var(--color-dark) 100%);">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4" style="color: var(--color-alabaster);">
        {combination.synergyScience.headline}
      </h2>
      <p class="text-lg md:text-xl max-w-3xl mx-auto" style="color: var(--color-faded-khaki);">
        You're doing {combination.habit1Name.toLowerCase()} alone. You're missing 60% of the benefits. Here's why.
      </p>
    </div>

    <div
      class="p-8 md:p-10 rounded-2xl border mb-12"
      style="background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(20px); border-color: rgba(0, 208, 156, 0.2);"
    >
      <p class="text-lg md:text-xl leading-relaxed mb-6" style="color: var(--color-alabaster);">
        {combination.synergyScience.explanation}
      </p>
      {combination.synergyScience.neuroscience && (
        <p class="text-base leading-relaxed" style="color: var(--color-faded-khaki);">
          {combination.synergyScience.neuroscience}
        </p>
      )}
    </div>

    <!-- Research Citations -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {combination.synergyScience.researchCitations.map((citation) => (
        <div
          class="p-6 rounded-xl border"
          style="background: rgba(0, 0, 0, 0.6); backdrop-filter: blur(20px); border-color: rgba(241, 237, 233, 0.08);"
        >
          <h3 class="text-lg font-bold mb-3" style="color: var(--color-jade);">
            {citation.study}
          </h3>
          <p class="text-base leading-relaxed mb-4" style="color: var(--color-faded-khaki);">
            {citation.finding}
          </p>
          {citation.link && (
            <a
              href={citation.link}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm font-medium hover:underline"
              style="color: var(--color-mint);"
            >
              Read the study â†’
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<!-- COMBINED BENEFITS SECTION -->
<section class="py-16 md:py-24 px-4" style="background: var(--color-dark);">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 text-center" style="color: var(--color-alabaster);">
      Combined Benefits: The 1+1=3 Effect
    </h2>
    <p class="text-lg md:text-xl mb-12 text-center max-w-3xl mx-auto" style="color: var(--color-faded-khaki);">
      When you stack {combination.habit1Name.toLowerCase()} with {combination.habit2Name.toLowerCase()}, you don't just get additive benefits. You unlock compound effects.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {combination.combinedBenefits.map((benefit) => (
        <div
          class="p-6 rounded-xl border transition-all duration-300 hover:scale-105 hover:border-[rgba(0,208,156,0.4)]"
          style="background: rgba(0, 0, 0, 0.6); backdrop-filter: blur(20px); border-color: rgba(241, 237, 233, 0.08);"
        >
          <div class="flex items-start gap-3 mb-3">
            <svg class="w-6 h-6 flex-shrink-0 mt-1" style={`color: ${benefit.uniqueToCombination ? 'var(--color-jade)' : 'var(--color-mint)'};`} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              {benefit.uniqueToCombination ? (
                <path d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              ) : (
                <polyline points="20 6 9 17 4 12"></polyline>
              )}
            </svg>
            <div>
              <h3 class="text-lg font-bold mb-2" style="color: var(--color-alabaster);">
                {benefit.benefit}
                {benefit.uniqueToCombination && (
                  <span class="ml-2 text-xs px-2 py-0.5 rounded-full" style="background: rgba(0, 208, 156, 0.1); color: var(--color-jade);">
                    UNIQUE
                  </span>
                )}
              </h3>
              <p class="text-base leading-relaxed" style="color: var(--color-faded-khaki);">
                {benefit.explanation}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- STACKING PROTOCOL SECTION - CTA #2 (Mid-Content) -->
<section class="py-16 md:py-24 px-4" style="background: linear-gradient(180deg, var(--color-dark) 0%, var(--color-rich-earth) 100%);">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 text-center" style="color: var(--color-alabaster);">
      The Habit Stacking Protocol
    </h2>
    <p class="text-lg md:text-xl mb-12 text-center max-w-3xl mx-auto" style="color: var(--color-faded-khaki);">
      Order matters. Timing matters. Here's exactly how to stack {combination.habit1Name.toLowerCase()} and {combination.habit2Name.toLowerCase()} for maximum impact.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="p-6 rounded-xl border" style="background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(20px); border-color: rgba(0, 208, 156, 0.2);">
        <div class="text-2xl font-bold mb-3" style="color: var(--color-jade);">Timing</div>
        <p class="text-base leading-relaxed" style="color: var(--color-faded-khaki);">
          {combination.stackingProtocol.timing}
        </p>
      </div>

      <div class="p-6 rounded-xl border" style="background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(20px); border-color: rgba(0, 208, 156, 0.2);">
        <div class="text-2xl font-bold mb-3" style="color: var(--color-jade);">Order</div>
        <p class="text-base leading-relaxed" style="color: var(--color-faded-khaki);">
          {combination.stackingProtocol.order}
        </p>
      </div>

      <div class="p-6 rounded-xl border" style="background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(20px); border-color: rgba(0, 208, 156, 0.2);">
        <div class="text-2xl font-bold mb-3" style="color: var(--color-jade);">Best Practice</div>
        <p class="text-base leading-relaxed" style="color: var(--color-faded-khaki);">
          {combination.stackingProtocol.bestPractice}
        </p>
      </div>
    </div>

    <!-- NooLife Integration -->
    <div
      class="p-8 rounded-2xl border mb-8"
      style="background: linear-gradient(135deg, rgba(0, 208, 156, 0.05), rgba(0, 208, 156, 0.02)); border-color: rgba(0, 208, 156, 0.3);"
    >
      <h3 class="text-xl font-bold mb-3" style="color: var(--color-jade);">
        How NooLife Tracks This Stack
      </h3>
      <p class="text-base leading-relaxed" style="color: var(--color-faded-khaki);">
        {combination.nooLifeIntegration}
      </p>
    </div>

    <!-- CTA #2 -->
    <div class="text-center">
      <a
        href="https://apps.apple.com/us/app/noolife-10-week-habit-plan/id6754310402"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block transition-all duration-300 hover:scale-110 hover:brightness-110 active:scale-95"
      >
        <Image
          src={downloadIOS}
          alt="Download on the App Store"
          class="h-16 md:h-20 w-auto mx-auto"
          loading="lazy"
        />
      </a>
      <p class="text-sm font-medium italic mt-2" style="color: var(--color-mint);">
        Track both habits with one integrated 66-day plan.
      </p>
    </div>
  </div>
</section>

<!-- PROGRESSION PLAN SECTION -->
<section class="py-16 md:py-24 px-4" style="background: var(--color-dark);">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 text-center" style="color: var(--color-alabaster);">
      Your 66-Day Combined Progression
    </h2>
    <p class="text-lg md:text-xl mb-12 text-center max-w-3xl mx-auto" style="color: var(--color-faded-khaki);">
      {combination.progressionPlan.overview}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {combination.progressionPlan.weeklyBreakdown.map((week) => (
        <div
          class="p-6 rounded-xl border"
          style="background: rgba(0, 0, 0, 0.6); backdrop-filter: blur(20px); border-color: rgba(241, 237, 233, 0.08);"
        >
          <div class="text-lg font-bold mb-4" style="color: var(--color-jade);">{week.weekRange}</div>
          <div class="space-y-3">
            <div>
              <span class="text-sm font-bold" style="color: var(--color-mint);">{combination.habit1Name}:</span>
              <p class="text-base mt-1" style="color: var(--color-faded-khaki);">{week.habit1Focus}</p>
            </div>
            <div>
              <span class="text-sm font-bold" style="color: var(--color-mint);">{combination.habit2Name}:</span>
              <p class="text-base mt-1" style="color: var(--color-faded-khaki);">{week.habit2Focus}</p>
            </div>
            <div class="pt-2 border-t" style="border-color: rgba(241, 237, 233, 0.08);">
              <span class="text-sm font-bold" style="color: var(--color-jade);">Combined Goal:</span>
              <p class="text-base mt-1" style="color: var(--color-alabaster);">{week.combinedGoal}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- COMMON MISTAKES SECTION -->
<section class="py-16 md:py-24 px-4" style="background: linear-gradient(180deg, var(--color-dark) 0%, var(--color-rich-earth) 100%);">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 text-center" style="color: var(--color-alabaster);">
      Common Mistakes When Combining
    </h2>
    <p class="text-lg md:text-xl mb-12 text-center max-w-3xl mx-auto" style="color: var(--color-faded-khaki);">
      These are the traps people fall into when stacking habits. Know them. Avoid them.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {combination.commonMistakes.map((mistake) => (
        <div
          class="p-6 rounded-xl border flex items-start gap-4"
          style="background: rgba(0, 0, 0, 0.6); backdrop-filter: blur(20px); border-color: rgba(255, 82, 82, 0.2);"
        >
          <div class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center" style="background: rgba(255, 82, 82, 0.1); color: #ff5252;">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="15" y1="9" x2="9" y2="15"></line>
              <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
          </div>
          <p class="text-base leading-relaxed" style="color: var(--color-alabaster);">
            {mistake}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- TESTIMONIAL SECTION -->
{combination.testimonial && (
  <section class="py-16 md:py-24 px-4" style="background: var(--color-dark);">
    <div class="max-w-4xl mx-auto text-center">
      <svg class="w-12 h-12 mx-auto mb-6 opacity-40" style="color: var(--color-jade);" viewBox="0 0 24 24" fill="currentColor">
        <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"></path>
      </svg>
      <blockquote class="text-xl md:text-2xl leading-relaxed mb-6" style="color: var(--color-alabaster);">
        {combination.testimonial}
      </blockquote>
    </div>
  </section>
)}

<!-- FAQ SECTION -->
<section class="py-16 md:py-24 px-4" style="background: linear-gradient(180deg, var(--color-rich-earth) 0%, var(--color-dark) 100%);">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-12 text-center" style="color: var(--color-alabaster);">
      Common Questions
    </h2>

    <div class="flex flex-col gap-4">
      {combination.faqs.map((faq) => (
        <details
          class="rounded-xl border border-[rgba(241,237,233,0.08)] hover:border-[rgba(0,208,156,0.15)] [&[open]]:border-[rgba(0,208,156,0.3)] transition-all"
          style="background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(20px);"
        >
          <summary class="px-6 py-6 lg:px-8 cursor-pointer flex justify-between items-center gap-4 text-lg font-bold list-none" style="color: var(--color-alabaster);">
            <span>{faq.question}</span>
            <svg class="w-6 h-6 flex-shrink-0 transition-transform [details[open]>&]:rotate-180" style="color: var(--color-jade);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </summary>
          <div class="px-6 pb-6 lg:px-8 text-base leading-relaxed" style="color: var(--color-faded-khaki);">
            <p>{faq.answer}</p>
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<!-- FINAL CTA SECTION - CTA #3 (Bottom) -->
<section class="py-16 md:py-24 px-4" style="background: var(--color-dark);">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-6" style="color: var(--color-alabaster);">
      Ready to Stack {combination.habit1Name} + {combination.habit2Name}?
    </h2>
    <p class="text-xl md:text-2xl leading-relaxed mb-8" style="color: var(--color-faded-khaki);">
      66 days from now, both habits could be automatic. Or you could still be doing them inconsistently. Your move.
    </p>

    <a
      href="https://apps.apple.com/us/app/noolife-10-week-habit-plan/id6754310402"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block transition-all duration-300 hover:scale-110 hover:brightness-110 active:scale-95 mb-4"
    >
      <Image
        src={downloadIOS}
        alt="Download on the App Store"
        class="h-20 md:h-24 w-auto mx-auto"
        loading="lazy"
      />
    </a>

    <p class="text-sm font-medium" style="color: var(--color-faded-khaki);">
      Free 3-day trial. Track both habits with one integrated plan.
    </p>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-fade-in {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
