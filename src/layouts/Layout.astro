---
// Props interface for page-specific overrides
import Navbar from '../components/Navbar.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "NooLife - Your Winter Arc Starts Now | 66 Days to Transform",
  description = "66 days to separate yourself from everyone settling for average. This winter arc decides if you're a winner or just another resolution that dies in February. Download NooLife and start your transformation."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/noolife_logo.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://noolife.app/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://noolife.app/NooLifeScreens.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://noolife.app/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://noolife.app/NooLifeScreens.png" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#1C1B1A" />

    <!-- Import Global Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
